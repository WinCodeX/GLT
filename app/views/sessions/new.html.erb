<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Back - GLT Logistics</title>
    <meta name="csrf-token" content="<%= form_authenticity_token %>">
    
    <!-- Favicon Links -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <meta name="theme-color" content="#8b5cf6">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #0a0a0f;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #f8f8f2;
            overflow-x: hidden;
        }

        /* Animated Background */
        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            overflow: hidden;
        }

        .gradient-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.25;
            animation: float 20s ease-in-out infinite;
        }

        .orb-1 {
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, #8b5cf6 0%, transparent 70%);
            top: -20%;
            left: -10%;
            animation-delay: 0s;
        }

        .orb-2 {
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, #a78bfa 0%, transparent 70%);
            bottom: -20%;
            right: -10%;
            animation-delay: 5s;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(50px, -50px) scale(1.1); }
            66% { transform: translate(-30px, 30px) scale(0.9); }
        }

        .sign-in-container {
            position: relative;
            z-index: 1;
            background: rgba(10, 10, 15, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 32px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            max-width: 460px;
            width: 100%;
            border: 1px solid rgba(139, 92, 246, 0.3);
        }

        .header {
            padding: 3rem 2.5rem 2rem;
            text-align: center;
        }

        .logo-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .logo-image {
            height: 48px;
            width: auto;
        }

        .title-container {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 16px;
            margin-bottom: 1.5rem;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(139, 92, 246, 0.1) 100%);
            border: 1px solid rgba(139, 92, 246, 0.3);
        }

        .header h1 {
            font-size: 2rem;
            margin: 0;
            font-weight: 800;
            background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .status-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 4px;
            background: #10b981;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .status-text {
            font-size: 0.8125rem;
            color: #10b981;
            font-weight: 500;
        }

        .form-container {
            padding: 0 2.5rem 3rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.75rem;
            color: #a1a1aa;
            font-weight: 600;
            font-size: 0.9375rem;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1.125rem;
            border: 2px solid rgba(139, 92, 246, 0.3);
            border-radius: 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(139, 92, 246, 0.05);
            color: #f8f8f2;
            outline: none;
        }

        .form-control::placeholder {
            color: #71717a;
        }

        .form-control:focus {
            border-color: #8b5cf6;
            background: rgba(139, 92, 246, 0.1);
            box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #a1a1aa;
            cursor: pointer;
            padding: 0.5rem;
            font-size: 1.125rem;
            transition: color 0.2s;
        }

        .toggle-password:hover {
            color: #a78bfa;
        }

        .btn {
            width: 100%;
            padding: 1rem 1.75rem;
            border-radius: 16px;
            font-size: 1.0625rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            margin-top: 0.75rem;
            position: relative;
            overflow: hidden;
        }

        .btn-login {
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
            color: white;
            box-shadow: 0 4px 16px rgba(139, 92, 246, 0.4);
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(139, 92, 246, 0.5);
        }

        .btn-login:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .btn-demo {
            background: rgba(139, 92, 246, 0.1);
            color: #a78bfa;
            border: 2px solid rgba(139, 92, 246, 0.3);
        }

        .btn-demo:hover {
            background: rgba(139, 92, 246, 0.2);
            border-color: #8b5cf6;
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 16px;
            margin-bottom: 1.5rem;
            font-size: 0.9375rem;
            font-weight: 500;
        }

        .alert-error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: #10b981;
        }

        .link-container {
            text-align: center;
            margin-top: 1.25rem;
        }

        .link-container a {
            color: #a78bfa;
            text-decoration: none;
            font-size: 0.9375rem;
            font-weight: 500;
            transition: color 0.2s;
        }

        .link-container a:hover {
            color: #8b5cf6;
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top: 3px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading .loading-spinner {
            display: inline-block;
            margin-right: 10px;
        }

        .demo-credentials {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            border-radius: 16px;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
        }

        .demo-credentials h4 {
            margin-bottom: 0.75rem;
            color: #f59e0b;
            font-size: 0.9375rem;
            font-weight: 700;
        }

        .demo-credentials p {
            margin: 0.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #fbbf24;
        }

        .demo-credentials code {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
            color: #fff;
            font-size: 0.8125rem;
        }

        .demo-credentials small {
            display: block;
            margin-top: 0.75rem;
            font-size: 0.75rem;
            color: #a1a1aa;
        }

        /* Responsive */
        @media (max-width: 480px) {
            .sign-in-container {
                margin: 0 10px;
            }

            .header h1 {
                font-size: 1.75rem;
            }

            .form-container {
                padding: 0 1.5rem 2.5rem;
            }

            .header {
                padding: 2.5rem 1.5rem 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
    </div>

    <div class="sign-in-container">
        <div class="header">
            <div class="logo-container">
                <img src="/images/logo.png" alt="GLT Logistics" class="logo-image">
            </div>

            <div class="title-container">
                <h1>Welcome Back!</h1>
            </div>
            
            <div class="status-container">
                <div class="status-dot"></div>
                <span class="status-text">Server Connected</span>
            </div>
        </div>

        <div class="form-container">
            <!-- Flash Messages -->
            <% if flash[:alert] %>
                <div class="alert alert-error">
                    <%= flash[:alert] %>
                </div>
            <% end %>

            <% if flash[:notice] %>
                <div class="alert alert-success">
                    <%= flash[:notice] %>
                </div>
            <% end %>

            <!-- Demo Credentials (for development) -->
            <% if Rails.env.development? %>
                <div class="demo-credentials">
                    <h4>💡 Demo Account</h4>
                    <p>Email: <code>admin@example.com</code></p>
                    <p>Password: <code>password</code></p>
                    <small>Click "Use Demo Account" below to auto-fill</small>
                </div>
            <% end %>

            <%= form_with(model: @user, url: sign_in_path, local: true, id: 'sign-in-form') do |form| %>
                <div class="form-group">
                    <%= form.label :email, 'Email' %>
                    <%= form.email_field :email, 
                        class: 'form-control', 
                        placeholder: 'your@email.com', 
                        required: true,
                        autocomplete: 'email' %>
                </div>

                <div class="form-group">
                    <%= form.label :password, 'Password' %>
                    <div class="password-wrapper">
                        <%= form.password_field :password, 
                            class: 'form-control', 
                            placeholder: 'Enter your password', 
                            required: true,
                            id: 'password-field',
                            autocomplete: 'current-password' %>
                        <button type="button" class="toggle-password" id="toggle-password" aria-label="Toggle password visibility">
                            👁️
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-login" id="sign-in-btn">
                    <span class="loading-spinner" id="loading"></span>
                    <span id="btn-text">Log In</span>
                </button>

                <% if Rails.env.development? %>
                    <button type="button" class="btn btn-demo" id="demo-btn">
                        Use Demo Account
                    </button>
                <% end %>
            <% end %>

            <div class="link-container">
                <a href="#">Forgot your password?</a>
            </div>
            
            <div class="link-container" style="margin-top: 10px;">
                <a href="/signup">Don't have an account? Sign up</a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('sign-in-form');
            const signInBtn = document.getElementById('sign-in-btn');
            const loading = document.getElementById('loading');
            const btnText = document.getElementById('btn-text');
            const demoBtn = document.getElementById('demo-btn');
            const passwordField = document.getElementById('password-field');
            const togglePassword = document.getElementById('toggle-password');

            // Handle form submission
            form.addEventListener('submit', function() {
                signInBtn.disabled = true;
                signInBtn.classList.add('loading');
                btnText.textContent = 'Logging in...';
            });

            // Password visibility toggle
            if (togglePassword && passwordField) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordField.type === 'password' ? 'text' : 'password';
                    passwordField.type = type;
                    togglePassword.textContent = type === 'password' ? '👁️' : '👁️‍🗨️';
                });
            }

            // Demo account auto-fill (development only)
            if (demoBtn) {
                demoBtn.addEventListener('click', function() {
                    document.getElementById('user_email').value = 'admin@example.com';
                    document.getElementById('user_password').value = 'password';
                });
            }

            // Auto-focus email field
            const emailField = document.getElementById('user_email');
            if (emailField && !emailField.value) {
                emailField.focus();
            }
        });
    </script>
</body>
</html>