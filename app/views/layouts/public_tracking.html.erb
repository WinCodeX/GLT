<!-- app/views/layouts/public_tracking.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  <title><%= content_for?(:title) ? yield(:title) : "Track Package#{' - ' + @package.code if @package}" %></title>
  
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="<%= "Track Package #{@package&.code}" %>">
  <meta property="og:description" content="Track your package in real-time">
  <meta property="og:type" content="website">
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="<%= "Track Package #{@package&.code}" %>">
  <meta name="twitter:description" content="Track your package in real-time">
  
  <style>
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html {
      scroll-behavior: smooth;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(180deg, #1a1a2e 0%, #0f0f1e 100%);
      color: #e4e4e7;
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }
    
    /* Loading State */
    .loading-container {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #a78bfa;
    }
    
    .loading-spinner {
      width: 48px;
      height: 48px;
      border: 4px solid rgba(168, 123, 250, 0.2);
      border-top-color: #a87bfa;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* Focus styles */
    *:focus {
      outline: 2px solid #a78bfa;
      outline-offset: 2px;
    }
    
    button:focus {
      outline: 2px solid #a78bfa;
    }
    
    /* Flash Messages */
    .flash-messages {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 9999;
      max-width: 90%;
    }
    
    .flash-message {
      padding: 1rem 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 0.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      animation: slideIn 0.3s ease-out;
      color: white;
      font-size: 0.875rem;
      font-weight: 500;
    }
    
    .flash-notice,
    .flash-success {
      background: rgba(16, 185, 129, 0.9);
    }
    
    .flash-alert,
    .flash-error {
      background: rgba(239, 68, 68, 0.9);
    }
    
    .flash-warning {
      background: rgba(245, 158, 11, 0.9);
    }
    
    .flash-info {
      background: rgba(59, 130, 246, 0.9);
    }
    
    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    
    @keyframes slideOut {
      from {
        transform: translateX(0);
        opacity: 1;
      }
      to {
        transform: translateX(100%);
        opacity: 0;
      }
    }
    
    /* Responsive */
    @media (max-width: 640px) {
      .flash-messages {
        right: 0.5rem;
        top: 0.5rem;
      }
      
      .flash-message {
        padding: 0.75rem 1rem;
        font-size: 0.8125rem;
      }
    }
  </style>
</head>
<body>
  <%= yield %>
  
  <!-- Flash Messages -->
  <% if flash.any? %>
    <div class="flash-messages" id="flash-messages">
      <% flash.each do |type, message| %>
        <div class="flash-message flash-<%= type %>">
          <%= message %>
        </div>
      <% end %>
    </div>
    
    <script>
      // Auto-hide flash messages after 5 seconds
      (function() {
        const flashMessages = document.getElementById('flash-messages');
        if (flashMessages) {
          setTimeout(function() {
            flashMessages.style.animation = 'slideOut 0.3s ease-out';
            setTimeout(function() {
              flashMessages.remove();
            }, 300);
          }, 5000);
        }
      })();
    </script>
  <% end %>
</body>
</html>