<!-- app/views/public/tracking/show.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Track <%= @package.code %> - GLT Logistics</title>
  
  <!-- Favicon Links -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <meta name="theme-color" content="#8b5cf6">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: #0a0a0f;
      color: #e4e4e7;
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Animated Background */
    .animated-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      overflow: hidden;
    }

    .gradient-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.2;
      animation: float 20s ease-in-out infinite;
    }

    .orb-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, #8b5cf6 0%, transparent 70%);
      top: -10%;
      left: -10%;
      animation-delay: 0s;
    }

    .orb-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, #a78bfa 0%, transparent 70%);
      top: 50%;
      right: -10%;
      animation-delay: 5s;
    }

    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(50px, -50px) scale(1.1); }
      66% { transform: translate(-30px, 30px) scale(0.9); }
    }

    /* Content */
    .tracking-container {
      position: relative;
      z-index: 1;
      max-width: 100%;
      margin: 0 auto;
      padding-bottom: 2rem;
    }

    /* Header */
    .tracking-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.5rem;
      background: rgba(10, 10, 15, 0.8);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(139, 92, 246, 0.2);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .back-button {
      background: rgba(139, 92, 246, 0.1);
      border: 2px solid #8b5cf6;
      border-radius: 12px;
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #a78bfa;
      cursor: pointer;
      transition: all 0.3s;
    }

    .back-button:hover {
      background: rgba(139, 92, 246, 0.2);
      transform: translateY(-2px);
    }

    .header-title h1 {
      font-size: 1.25rem;
      font-weight: 700;
      background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .header-subtitle {
      font-size: 0.875rem;
      color: #a1a1aa;
      margin-top: 0.25rem;
    }

    .header-actions {
      display: flex;
      gap: 0.5rem;
    }

    .icon-button {
      background: rgba(139, 92, 246, 0.1);
      border: 2px solid rgba(139, 92, 246, 0.3);
      border-radius: 12px;
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #a78bfa;
      cursor: pointer;
      transition: all 0.3s;
    }

    .icon-button:hover {
      background: rgba(139, 92, 246, 0.2);
      border-color: #8b5cf6;
      transform: translateY(-2px);
    }

    /* Package Card */
    .package-card {
      margin: 2rem 1.5rem;
      background: rgba(10, 10, 15, 0.8);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 24px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }

    .package-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    }

    .package-code {
      font-size: 1.75rem;
      font-weight: 800;
      background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
    }

    .package-route {
      font-size: 0.9375rem;
      color: #a1a1aa;
    }

    .package-badges {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-end;
    }

    .badge {
      padding: 0.625rem 1.25rem;
      border-radius: 12px;
      font-size: 0.8125rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .badge-fragile,
    .badge-delivery-type {
      background: transparent;
      border: 2px solid;
    }

    .badge-state {
      color: white;
    }

    /* Package Details */
    .package-details {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .detail-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }

    .detail-section {
      background: rgba(139, 92, 246, 0.05);
      border: 1px solid rgba(139, 92, 246, 0.1);
      border-radius: 16px;
      padding: 1.5rem;
    }

    .detail-label {
      font-size: 0.8125rem;
      color: #71717a;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
    }

    .detail-value {
      font-size: 1.25rem;
      color: #f4f4f5;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .detail-phone {
      font-size: 0.9375rem;
      color: #a1a1aa;
    }

    .cost-value {
      font-size: 1.5rem;
      color: #10b981;
      font-weight: 800;
    }

    /* Timeline Card */
    .timeline-card {
      margin: 2rem 1.5rem;
      background: rgba(10, 10, 15, 0.8);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 24px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }

    .timeline-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    }

    .timeline-icon {
      color: #a78bfa;
    }

    .timeline-header h3 {
      font-size: 1.25rem;
      font-weight: 700;
      background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .timeline-list {
      display: flex;
      flex-direction: column;
    }

    .timeline-item {
      display: flex;
      gap: 1.5rem;
      position: relative;
    }

    .timeline-marker {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 0.25rem;
    }

    .timeline-dot {
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      background: rgba(139, 92, 246, 0.1);
      border: 3px solid #a855f7;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      position: relative;
      z-index: 2;
    }

    .timeline-dot.completed {
      background: rgba(139, 92, 246, 0.2);
      border-color: #a855f7;
      box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);
    }

    .timeline-dot.rejected {
      background: rgba(239, 68, 68, 0.2);
      border-color: #ef4444;
      box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);
    }

    .timeline-line {
      width: 2px;
      flex-grow: 1;
      background: linear-gradient(180deg, rgba(168, 85, 247, 0.5) 0%, rgba(168, 85, 247, 0.1) 100%);
      margin-top: 0.5rem;
      min-height: 3rem;
    }

    .timeline-content {
      flex: 1;
      padding-bottom: 3rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    .timeline-item-last .timeline-content {
      padding-bottom: 0;
    }

    .timeline-text {
      flex: 1;
    }

    .timeline-title {
      font-size: 1rem;
      color: #f4f4f5;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .timeline-description {
      font-size: 0.875rem;
      color: #71717a;
      line-height: 1.6;
    }

    .timeline-time {
      font-size: 0.8125rem;
      color: #a1a1aa;
      text-align: right;
      flex-shrink: 0;
      margin-left: 1.5rem;
    }

    /* QR Code Card */
    .qr-code-card {
      margin: 2rem 1.5rem;
      background: rgba(10, 10, 15, 0.8);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 24px;
      padding: 2rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }

    .qr-code-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    }

    .qr-code-header svg {
      color: #a78bfa;
    }

    .qr-code-header h3 {
      font-size: 1.25rem;
      font-weight: 700;
      background: linear-gradient(135deg, #ffffff 0%, #a78bfa 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .qr-code-container {
      display: flex;
      justify-content: center;
      padding: 3rem;
      background: white;
      border-radius: 20px;
    }

    .qr-code-image {
      width: 100%;
      max-width: 300px;
      height: auto;
      border-radius: 12px;
    }

    .qr-code-placeholder {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .qr-placeholder-text {
      color: #8b5cf6;
      font-size: 1rem;
      font-weight: 600;
    }

    .spinner {
      border: 4px solid rgba(139, 92, 246, 0.2);
      border-radius: 50%;
      border-top: 4px solid #8b5cf6;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Responsive */
    @media (max-width: 768px) {
      .package-header {
        flex-direction: column;
        gap: 1.5rem;
      }

      .package-badges {
        align-items: flex-start;
        width: 100%;
      }

      .detail-row {
        grid-template-columns: 1fr;
      }

      .header-actions {
        gap: 0.25rem;
      }

      .icon-button {
        width: 40px;
        height: 40px;
      }
    }

    @media print {
      .animated-bg,
      .tracking-header,
      .icon-button {
        display: none;
      }
      
      body {
        background: white;
        color: black;
      }
      
      .package-card,
      .timeline-card,
      .qr-code-card {
        border: 1px solid #ccc;
        box-shadow: none;
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <!-- Animated Background -->
  <div class="animated-bg">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
  </div>

  <div class="tracking-container">
    <!-- Header -->
    <div class="tracking-header">
      <button class="back-button" onclick="window.history.back()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </button>
      
      <div class="header-title">
        <h1><%= get_delivery_type_display(@package.delivery_type) %> Tracking</h1>
        <p class="header-subtitle"><%= @package.code %></p>
      </div>

      <div class="header-actions">
        <button class="icon-button" onclick="window.print()" title="Print">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 2 18 2 18 9"/>
            <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/>
            <rect x="6" y="14" width="12" height="8"/>
          </svg>
        </button>
        <button class="icon-button" onclick="shareTracking()" title="Share">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"/>
            <polyline points="16 6 12 2 8 6"/>
            <line x1="12" y1="2" x2="12" y2="15"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Package Details Card -->
    <div class="package-card">
      <div class="package-header">
        <div>
          <h2 class="package-code"><%= @package.code %></h2>
          <p class="package-route">
            <%= @package.sender_name || 'N/A' %>, 
            <%= @package.origin_area&.name || 'Origin' %> â†’ 
            <%= @package.destination_area&.name || 'Destination' %>
          </p>
        </div>
        
        <div class="package-badges">
          <% if @package.fragile_delivery? %>
            <span class="badge badge-fragile" style="border-color: <%= get_delivery_type_badge_color(@package.delivery_type) %>; color: <%= get_delivery_type_badge_color(@package.delivery_type) %>">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 9v4m0 4h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"/>
              </svg>
              <%= get_delivery_type_display(@package.delivery_type) %>
            </span>
          <% else %>
            <span class="badge badge-delivery-type" style="border-color: <%= get_delivery_type_badge_color(@package.delivery_type) %>; color: <%= get_delivery_type_badge_color(@package.delivery_type) %>">
              <%= get_delivery_type_display(@package.delivery_type) %>
            </span>
          <% end %>
          
          <span class="badge badge-state" style="background-color: <%= get_state_badge_color(@package.state) %>">
            <%= @package.state.humanize.upcase %>
          </span>
        </div>
      </div>

      <div class="package-details">
        <!-- Sender & Receiver -->
        <div class="detail-row">
          <div class="detail-section">
            <p class="detail-label">Sender</p>
            <p class="detail-value"><%= @package.sender_name || 'N/A' %></p>
            <p class="detail-phone"><%= @package.sender_phone %></p>
          </div>

          <div class="detail-section">
            <p class="detail-label">Receiver</p>
            <p class="detail-value"><%= @package.receiver_name %></p>
            <p class="detail-phone"><%= @package.receiver_phone %></p>
          </div>
        </div>

        <!-- Cost & Location -->
        <div class="detail-row">
          <div class="detail-section">
            <p class="detail-label">Cost</p>
            <p class="cost-value">KES <%= @package.cost %></p>
          </div>

          <div class="detail-section">
            <p class="detail-label">Delivery Location</p>
            <p class="detail-value"><%= get_delivery_location_display(@package) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Journey Timeline -->
    <div class="timeline-card">
      <div class="timeline-header">
        <svg class="timeline-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12 6 12 12 16 14"/>
        </svg>
        <h3>Journey Timeline</h3>
      </div>

      <div class="timeline-list">
        <% @journey_timeline.each_with_index do |event, index| %>
          <div class="timeline-item <%= 'timeline-item-last' if index == @journey_timeline.length - 1 %>">
            <div class="timeline-marker">
              <div class="timeline-dot <%= event[:status] %>"></div>
              <% unless index == @journey_timeline.length - 1 %>
                <div class="timeline-line"></div>
              <% end %>
            </div>
            
            <div class="timeline-content">
              <div class="timeline-text">
                <p class="timeline-title"><%= event[:title] %></p>
                <p class="timeline-description"><%= event[:description] %></p>
              </div>
              <p class="timeline-time">
                <%= event[:timestamp].strftime('%b %d, %I:%M %p') %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- QR Code Section -->
    <div class="qr-code-card">
      <div class="qr-code-header">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="7" height="7"/>
          <rect x="14" y="3" width="7" height="7"/>
          <rect x="14" y="14" width="7" height="7"/>
          <rect x="3" y="14" width="7" height="7"/>
        </svg>
        <h3>QR Code for Tracking</h3>
      </div>

      <div class="qr-code-container">
        <% if @qr_code_base64.present? %>
          <img src="<%= @qr_code_base64 %>" alt="QR Code for <%= @package.code %>" class="qr-code-image">
        <% else %>
          <div class="qr-code-placeholder">
            <div class="spinner"></div>
            <p class="qr-placeholder-text">Generating QR Code...</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    function shareTracking() {
      const url = window.location.href;
      const code = '<%= @package.code %>';
      const title = 'Track Package ' + code;
      
      if (navigator.share) {
        navigator.share({
          title: title,
          text: 'Track your GLT package: ' + code,
          url: url
        }).catch(err => console.log('Share failed:', err));
      } else {
        navigator.clipboard.writeText(url).then(() => {
          alert('Tracking link copied to clipboard!');
        }).catch(err => {
          console.log('Copy failed:', err);
        });
      }
    }
  </script>
</body>
</html>