    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
    }

    .footer-text {
      font-size: 0.875rem;
      color: #a1a1aa;
      margin-bottom: 1rem;
    }

    .footer-links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
    }

    .footer-link {
      color: #8b5cf6;
      text-decoration: none;
      font-size: 0.875rem;
      transition: color 0.3s;
    }

    .footer-link:hover {
      color: #a78bfa;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2rem;
      }

      .services-grid {
        grid-template-columns: 1fr;
      }

      .stats-grid {
