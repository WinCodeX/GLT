    .fragile .service-icon {
      background: rgba(255, 149, 0, 0.2);
      color: #FF9500;
    }

    .home .service-icon {
      background: rgba(139, 92, 246, 0.2);
      color: #8b5cf6;
    }

    .office .service-icon {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
