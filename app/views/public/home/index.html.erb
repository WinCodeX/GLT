  <title>GLT Logistics - Fast, Reliable Delivery Services</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
      color: #e4e4e7;
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* Header */
    .header {
      padding: 1.5rem;
      background: rgba(30, 30, 60, 0.6);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(124, 58, 237, 0.2);
    }

    .header-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: #8b5cf6;
      font-style: italic;
    }

    .track-button {
      background: rgba(124, 58, 237, 0.2);
      border: 2px solid #7c3aed;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      color: #a78bfa;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
    }

    .track-button:hover {
      background: rgba(124, 58, 237, 0.3);
      transform: translateY(-2px);
    }

    /* Hero Section */
    .hero {
      max-width: 1200px;
      margin: 0 auto;
      padding: 4rem 1.5rem 3rem;
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: #f4f4f5;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .hero-subtitle {
      font-size: 1.125rem;
      color: #a1a1aa;
      margin-bottom: 3rem;
      line-height: 1.6;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .stat-card {
      background: rgba(30, 30, 60, 0.6);
      border: 1px solid rgba(124, 58, 237, 0.3);
      border-radius: 16px;
      padding: 1.5rem;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: #8b5cf6;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.875rem;
      color: #a1a1aa;
    }

    /* Services Section */
    .services {
      max-width: 1200px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-title {
      font-size: 2rem;
      font-weight: 700;
      color: #f4f4f5;
      margin-bottom: 0.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
      color: #a1a1aa;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .service-card {
      background: rgba(30, 30, 60, 0.8);
      border: 2px solid;
      border-radius: 20px;
      padding: 2rem;
      transition: all 0.3s;
      cursor: pointer;
      text-decoration: none;
      display: block;
    }

    .service-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .service-card.fragile {
      border-color: rgba(255, 149, 0, 0.5);
      background: rgba(255, 149, 0, 0.05);
    }

    .service-card.home {
      border-color: rgba(139, 92, 246, 0.5);
      background: rgba(139, 92, 246, 0.05);
    }

    .service-card.office {
      border-color: rgba(59, 130, 246, 0.5);
      background: rgba(59, 130, 246, 0.05);
    }

    .service-card.collection {
      border-color: rgba(16, 185, 129, 0.5);
      background: rgba(16, 185, 129, 0.05);
    }

    .service-icon {
      width: 56px;
      height: 56px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.25rem;
      font-size: 1.75rem;
