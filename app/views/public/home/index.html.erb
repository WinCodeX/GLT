    .home .service-button {
      border-color: #8b5cf6;
      color: #8b5cf6;
    }

    .home .service-button:hover {
      background: rgba(139, 92, 246, 0.1);
    }

    .office .service-button {
      border-color: #3b82f6;
      color: #3b82f6;
    }

    .office .service-button:hover {
